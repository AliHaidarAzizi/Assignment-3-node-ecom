<!DOCTYPE html>
<html lang="en">
  <%- include('../components/head',{title: "home"}); %>
  <body>
    <%- include('../components/header',{cartButtonShow:true}); %>
    <main>
      <section class="product-listing">
          <% for( let i = 0; i < lists.length; i++ ) { %>
            <div class="product">
              <img src="<%= lists[i].product_img_url%>" alt="<%= lists[i].product_name %>" />
              <h2><%= lists[i].product_name %></h2>
              <p><%= lists[i].product_description%></p>
              <p class="price"><%=lists[i].currency%> <%= lists[i].price%></p>

            </div>   
          <% } %>

      </section>
    </main>
  </body>
</html>